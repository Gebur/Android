<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="903dp"
        android:layout_weight="1"
        android:background="@color/UpBack"
        android:orientation="vertical">

        <EditText
            android:id="@+id/myMail"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:ems="10"

            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:text="@string/EmailText"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PasswordText"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTop"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/Buttons"
                android:insetTop="6dp"
                android:text="@string/LogButtonText"
                android:textColor="#090909"></Button>

            <Button
                android:id="@+id/btnBottom"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="90dp"
                android:text="@string/RegButtonText"
                android:textColor="#090909"></Button>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NotRobot" />

            <TextView
                android:id="@+id/tvBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/ForgetText"></TextView>

            <Button
                android:id="@+id/btnBottom3"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:insetTop= "8dp"
                android:text="@string/ClickHere"
                android:textColor="#090909"></Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>